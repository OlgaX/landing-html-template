// INFO-BLOCK
section.info-block.screen.jarallax#info_block
    .screen__inner
        .container
            .row
                .col-sm-8.offset-sm-2.wow.fadeIn.mb-5(data-wow-delay="0.6s")
                    h2.section-title.info-block__title(data-jarallax-element="-50") Be the first
                    p.section-desc.info-block__desc(data-jarallax-element="-30") Lorem ipsum dolor sit amet, consectetur adipis.

            .info-block__img(data-jarallax-element="-120")
                img(src="img/info-block.png")